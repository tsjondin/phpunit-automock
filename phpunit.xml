<?xml version="1.0" encoding="UTF-8"?>
<phpunit
        backupGlobals               = "false"
        colors                      = "true"
        >

    <testsuites>
        <testsuite name="Automock Demo Suite">
            <directory>tests/*</directory>
        </testsuite>
    </testsuites>

    <listeners>
        <listener class="AutomockListener" file="src/AutomockListener.php"></listener>
    </listeners>

    <php>
        <ini name="xdebug.max_nesting_level" value="200"/>
    </php>

</phpunit>
